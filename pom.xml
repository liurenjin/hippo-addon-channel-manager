<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.onehippo.cms7</groupId>
    <artifactId>hippo-cms7-project</artifactId>
    <version>10-alpha</version>
  </parent>


  <artifactId>hippo-addon-channel-manager</artifactId>
  <version>1.01.07-SNAPSHOT</version>
  <packaging>pom</packaging>
  <inceptionYear>2011</inceptionYear>

  <name>Hippo Addon Channel Manager</name>

  <properties>
    <hippo.cms.version>2.21.07-alpha</hippo.cms.version>
    <hippo.hst.version>2.23.07-alpha</hippo.hst.version>
    <hippo.repository.version>2.21.06-alpha</hippo.repository.version>
    <hippo.addon-hst-configuration-editor.version>1.08.06-alpha</hippo.addon-hst-configuration-editor.version>
    <commons-lang.version>2.1</commons-lang.version>
    <junit.version>4.5</junit.version>
  </properties>

  <repositories>
    <repository>
      <id>hippo</id>
      <name>Hippo Maven 2</name>
      <url>http://maven.onehippo.com/maven2/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
    </repository>
    <repository>
      <id>hippo-maven2-snapshots</id>
      <name>Hippo Maven 2 Snapshots</name>
      <url>http://maven.onehippo.com/maven2-snapshots/</url>
    </repository>
  </repositories>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.onehippo.cms7</groupId>
        <artifactId>hippo-addon-hst-configuration-editor-frontend</artifactId>
        <version>${hippo.addon-hst-configuration-editor.version}</version>
      </dependency>
      <dependency>
        <groupId>org.onehippo.cms7</groupId>
        <artifactId>hippo-cms-api</artifactId>
        <version>${hippo.cms.version}</version>
      </dependency>
      <dependency>
        <groupId>org.onehippo.cms7.hst</groupId>
        <artifactId>hst-rest-api</artifactId>
        <version>${hippo.hst.version}</version>
      </dependency>

      <!-- Test dependencies -->
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>
    </dependencies>

  </dependencyManagement>

  <modules>
    <module>frontend</module>
    <module>repository</module>
    <module>test</module>
  </modules>

  <scm>
    <connection>scm:svn:http://svn.onehippo.org/repos/hippo/hippo-cms7/addons/addon-channel-manager/trunk</connection>
    <developerConnection>scm:svn:https://svn.onehippo.org/repos/hippo/hippo-cms7/addons/addon-channel-manager/trunk</developerConnection>
    <url>http://svn.onehippo.org/repos/hippo/hippo-cms7/addons/addon-channel-manager/trunk</url>
  </scm>

</project>
