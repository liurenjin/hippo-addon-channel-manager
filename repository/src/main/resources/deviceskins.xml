<sv:node xmlns:sv="http://www.jcp.org/jcr/sv/1.0" xmlns:h="http://www.onehippo.org/jcr/xmlimport" sv:name="cms" h:merge="combine">
  <sv:node sv:name="hippo-channel-manager" h:merge="combine">
    <sv:node sv:name="templatecomposer-device-combo" >
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>frontend:plugin</sv:value>
      </sv:property>
      <sv:property sv:name="deviceskins.service.id" sv:type="String">
        <sv:value>default.deviceskins.service</sv:value>
      </sv:property>
      <sv:property sv:name="plugin.class" sv:type="String">
        <sv:value>org.onehippo.cms7.channelmanager.templatecomposer.deviceskins.DeviceManager</sv:value>
      </sv:property>
      <sv:property sv:name="position.edit" sv:type="String">
        <sv:value>last</sv:value>
      </sv:property>
      <sv:property sv:name="position.view" sv:type="String">
        <sv:value>before template-composer-toolbar-fullscreen-button</sv:value>
      </sv:property>
      <sv:property sv:name="rest.proxy.service.id" sv:type="String">
        <sv:value>hst.rest.proxy.service</sv:value>
      </sv:property>
    </sv:node>
  </sv:node>
  <sv:node sv:name="cms-services" h:merge="combine">
    <sv:node sv:name="defaultDeviceService">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>frontend:plugin</sv:value>
      </sv:property>
      <sv:property sv:name="deviceskins.service.id" sv:type="String">
        <sv:value>default.deviceskins.service</sv:value>
      </sv:property>
      <sv:property sv:name="plugin.class" sv:type="String">
        <sv:value>org.onehippo.cms7.channelmanager.templatecomposer.deviceskins.ClassPathDeviceService</sv:value>
      </sv:property>
    </sv:node>
  </sv:node>
</sv:node>
